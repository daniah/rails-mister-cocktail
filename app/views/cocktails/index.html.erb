<div class="container">
  <div class="row">
    <div class="d-flex flex-column" class="col_6">
      <h1 class="p-2">Cocktails</h1>
        <ul style="list-style-type:none;">
            <% @cocktails.each do |cocktail| %>
              <li><h5 class="p-2"><strong>| </strong><%= link_to cocktail.name, cocktail_path(cocktail) %></li></h5>
            <% end %>
        </ul>
<%= link_to 'add a new cocktail', new_cocktail_path, class: 'btn'  %>
    </div>
  </div>
</div>
